algoritmo "Fatorial"
var
  C, N, F: Inteiro
  R: Caractere
inicio
   Repita
      Escreva ("Digite um número: ")
      Leia (N)
      C <- N
      F <- 1
      Repita
        F <- F * C
        C <- C - 1
      Ate (C < 1)
      EscrevaL ("O valor fatorial de ", N, " é igual a ", F, ".")
      Escreva ("Você deseja saber o valor fatorial de outro número? [S/N] ")
      Leia (R)
      LimpaTela
   Ate ( R = "N")
fimalgoritmo